<idea-plugin>
    <id>com.natpryce.pottery.pottery-idea-plugin</id>
    <name>Pottery</name>
    <vendor email="sw@natpryce.com" url="http://natpryce.com">Nat Pryce</vendor>

    <description><![CDATA[
    It's like Twitter, for recording things that happen in your project, stored in it's version control repository.
    See https://github.com/npryce/pottery.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Pottery"
                    secondary="true"
                    canCloseContents="false"
                    icon="/pottery.png"
                    anchor="bottom"
                    factoryClass="com.natpryce.pottery.ideaplugin.PotteryPlugin"/>
    </extensions>

    <change-notes>
    </change-notes>
</idea-plugin>
